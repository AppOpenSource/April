<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/activity_april"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <include layout="@layout/activity_common_title" />

        <Button
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:text="打卡"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sign_record"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:text="打卡记录"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/coach_review"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="教练点评"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/news_refined"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="新闻精选"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/notification_center"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="通知中心"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/app_count"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="应用数据统计"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/re_write"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="116dp"
            android:text="把April扩展到WeChat小程序"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"></View>

    </LinearLayout>

</ScrollView>
