<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#E5E5E5" >

    <LinearLayout
        android:id="@+id/activity_april"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <include layout="@layout/activity_common_title"/>

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/sign_in"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:text="打卡" />

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/sign_record"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:text="打卡记录" />

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/coach_review"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="教练点评" />

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/news_refined"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="新闻精选" />

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/notification_center"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="通知中心" />

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/app_count"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="应用数据统计" />

        <Button
            android:layout_marginTop="116dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/re_write"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="把April扩展到WeChat小程序" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp">
        </View>

    </LinearLayout>

</ScrollView>
