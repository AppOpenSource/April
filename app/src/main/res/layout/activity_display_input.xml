<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/text1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="22sp" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="2"
            android:textSize="22sp" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="3"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="4"
            android:textSize="22sp" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="5"
            android:textSize="22sp" />
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="6"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="7"
            android:textSize="22sp" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="8"
            android:textSize="22sp" />
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="9"
            android:textSize="22sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="7"
            android:visibility="invisible"
            android:textSize="22sp" />
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="0"
            android:textSize="22sp" />
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="取消"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>

